<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
<hibernate-configuration>
	<session-factory>
		<!-- JDBC API stuff -->
		<property name="hibernate.connection.username">moviedb</property>
		<property name="hibernate.connection.password">p4ssw0rd</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@revature-instance.crl675iwrq4r.us-east-2.rds.amazonaws.com:1521:orcl</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<!-- Additional Hibernate Options -->
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">false</property>
		
		<property name="connection.pool_size">10</property>
		<!-- Connection Pool is a method of speeding up database calls. Hibernate will create 10 connections
		to the database when it starts up and everytime you create a session, that will "borrow" a connection
		from the connection pool. When you close a session the connection doesn't close, it is simply freed up 
		for another session to use it. This speeds up database interactions. -->
		<property name="hibernate.hbm2ddl.auto">create</property>
		<!-- CREATE - drops all existing tables and then hibernate creates your schema
			VALIDATE - hibernate checks to make sure all the schema is as expected
			UPDATE - hibernate will not delete anything, it'll only add to your schema
			NONE - it means hibernate won't do anything to your schema-->
		
		
		<mapping class="com.model.Character"/>
		<mapping class="com.model.Movie"/>
		<mapping class="com.model.Director"/>
	</session-factory>
</hibernate-configuration>